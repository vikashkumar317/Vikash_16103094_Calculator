							<input class="btn2" type=button name=sq value=sq onclick="txt.value=Math.pow(txt.value,2)">
							<input class="btn2" type=button name=mod value=% onclick="display(mod.value)">
							
					</tr>
					<tr>
							<input class="btn2" type=button name=sin value=sin onclick="txt.value=(Math.sin(txt.value)).toPrecision(5);">
