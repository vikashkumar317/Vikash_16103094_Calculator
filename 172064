							<input class="btn1" type=button name=subbtn value=- onclick="display(subbtn.value)"><br>
							<input class="btn1" type=button name=addbtn value=+ onclick="display(addbtn.value)"><br>
							<input class="btn1" type=button name=btneq value== onclick="try {txt.value=(eval(txt.value)).toPrecision(5); }
                             catch(err) {z=1; txt.value=err.message;}">
						</td>
						
