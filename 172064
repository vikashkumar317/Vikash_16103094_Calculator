		<script type="text/javascript">
		    var z=0;
		    /*function for display digit and value*/
			function display(num)
			{
			    if(webcalc.txt.value.length<14)
				{
				
			     if(z==1 || webcalc.txt.value=="Infinity")
				 {
				 z=0;
				webcalc.txt.value=num;
				}
				else
				webcalc.txt.value+=num;
				}
				else
				{
				  webcalc.txt.value="length exceed";
				  z=1;
				}
			}
			
		    /*function for all clear*/
			function ac()
			{
				webcalc.txt.value='';
			}
			
		    /*function for delete a single digit*/
			function del()
			{	
				webcalc.txt.value=webcalc.txt.value.slice(0,webcalc.txt.value.length-1);
			}
			 
		</script>
		
		<style>
