							<input class="btn2" type=button name=tan value=tan onclick="txt.value=(Math.tan(txt.value,2)).toPrecision(5);">
							<input class="btn2" type=button name=log value=log onclick="txt.value=(Math.log(txt.value)).toPrecision(5);">
							<input class="btn2" type="button" name=pi value=pi onclick="txt.value+=(Math.PI).toPrecision(5);"><br>
							
